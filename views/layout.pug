            span(class="icon-bar")
            span(class="icon-bar")
            span(class="icon-bar")
          a(class="navbar-brand" href="#")= appName
        div(id="navbar" class="navbar-collapse collapse")
            ul(class="nav navbar-nav")
                li(class="active")
                    a(href="#") Home
            ul(class="nav navbar-nav navbar-right")
                li
                    a(href="#") Welcome!

